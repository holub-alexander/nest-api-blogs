{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "typeRoots": ["./global", "./node_modules/@types"],
    "paths": {
      "@/common/*": ["./src/common/*"],
      "@/entity/*": ["./src/entity/*"],
      "@/config/*": ["./src/config/*"],

      "@/auth/*": ["./src/auth/*"],
      "@/posts/*": ["./src/posts/*"],
      "@/testing/*": ["./src/testing/*"],
      "@/blogs/*": ["./src/blogs/*"],
      "@/users/*": ["./src/users/*"],
      "@/security-devices/*": ["./src/security-devices/*"]
    }
  }
}
